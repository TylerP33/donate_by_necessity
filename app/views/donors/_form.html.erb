<h2>Signup</h2>

<% if @donor.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@donor.errors.count, "error") %></h2>

    <ul>
    <% @donor.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @donor do |f| %>
  <%= f.label :email %><br>
  <%= f.text_field :email%><br>
  <%= f.label :password %><br>
  <%= f.password_field :password, placeholder: "(hidden)" %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation, placeholder: "(hidden)" %><br><br><Br>
  <%= f.submit %><br><br>
<% end %>

<%= link_to "Back to Home Page", home_show_path %>
